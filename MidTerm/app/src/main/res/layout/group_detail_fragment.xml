<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupDetailContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/groupImage"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Group Name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/groupTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Group Topic"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupTopic"
        android:layout_margin="20sp">

        <TextView
            android:id="@+id/groupDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group detail"
            android:textSize="20sp" />

    </ScrollView>

</RelativeLayout>