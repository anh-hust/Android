<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20sp"
    android:elevation="10dp"
    android:backgroundTint="@color/light_grey"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:text="Member Name"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/memberID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/memberID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:text="MSSV"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/memberName" />

        <TextView
            android:id="@+id/memberAbsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:text="absent"

            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/memberID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/memberID" />

        <ImageView
            android:id="@+id/memberRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leader_icon"
            app:layout_constraintBottom_toTopOf="@+id/memberAbsent"
            app:layout_constraintEnd_toEndOf="@+id/memberAbsent"
            app:layout_constraintStart_toStartOf="@+id/memberAbsent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>